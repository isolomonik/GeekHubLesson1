<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Lesson6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.isolomonik.geekhublesson1.Lesson6Activity"
    android:orientation="horizontal"
    android:baselineAligned="false">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view">

        <android.support.v7.widget.Toolbar

            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize" />

    </android.support.design.widget.AppBarLayout>

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:name="com.isolomonik.geekhublesson1.Lesson6ListFragment"
        android:id="@+id/listFragment"
        android:layout_weight="1"
        />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.isolomonik.geekhublesson1.Lesson6DetailFragment"
        android:id="@+id/detailFrame"
        android:layout_weight="1"
        />


</LinearLayout>
